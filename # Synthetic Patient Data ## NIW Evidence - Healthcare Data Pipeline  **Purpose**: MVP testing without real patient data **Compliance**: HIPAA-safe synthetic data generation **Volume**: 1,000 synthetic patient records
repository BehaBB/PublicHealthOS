"""
Synthetic Patient Data Generator
NIW Evidence - HIPAA-compliant data pipeline
"""

import pandas as pd
import numpy as np

class SyntheticDataGenerator:
    def __init__(self):
        self.patient_count = 1000
        
    def generate_patients(self):
        """Generate synthetic patient data for MVP testing"""
        np.random.seed(42)  # For reproducible results
        
        data = {
            'patient_id': range(1, self.patient_count + 1),
            'age': np.random.randint(30, 80, self.patient_count),
            'bmi': np.random.uniform(18.5, 45, self.patient_count),
            'hba1c': np.random.uniform(5.0, 12.0, self.patient_count),
            'blood_pressure': np.random.randint(90, 180, self.patient_count),
            'cholesterol': np.random.randint(150, 300, self.patient_count),
            'has_complications': np.random.choice([0, 1], self.patient_count, p=[0.7, 0.3])
        }
        
        df = pd.DataFrame(data)
        print(f"âœ… Generated {len(df)} synthetic patient records - NIW Evidence")
        return df

# NIW Proof - Data pipeline implementation
if __name__ == "__main__":
    generator = SyntheticDataGenerator()
    patients = generator.generate_patients()
    patients.to_csv("data-synthetic/synthetic_patients.csv", index=False)
